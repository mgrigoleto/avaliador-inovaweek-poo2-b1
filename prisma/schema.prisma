// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Projeto{
  id  Int @id @default(autoincrement())
  nome String
  area String
  participantes Aluno[]
}

model Aluno {
  id  Int @id @default(autoincrement())
  nome String
  matricula Int @unique
  projeto Projeto @relation(fields: [id_projeto], references: [id])
  id_projeto Int
  avaliador Avaliacao[]
}

model Avaliacao{
  id  Int @id @default(autoincrement())
  datahora DateTime
  criterio String?
  nota Float
  avaliadorAluno Aluno?  @relation(fields: [id_avaliador], references: [id])
  avaliadorProfessor Professor?  @relation(fields: [id_avaliador], references: [id])
  id_avaliador Int
}

model Professor {
  id  Int @id @default(autoincrement())
  nome String
  matricula Int @unique
  avaliador Avaliacao[]
}